
@model IssueTracker.Models.ApplicationUser

@{
    ViewBag.Title = "User Details";
}

<h2>@ViewBag.Title</h2>

<div>
    <hr/>
    <dl class="dl-horizontal">
        @Html.Partial("_UserDetailsPartial", Model)
    </dl>
</div>
<div class="container-fluid">
    <div class="row">
        <h5>Roles this user belongs to:</h5>
    </div>
    @if(ViewBag.RoleNames.Count == 0)
    {
        <hr />
        <p>No roles found for this user</p>
    }

    @foreach(var item in ViewBag.RoleNames)
    {
        <div class="row">
            @item
        </div>
    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id})
    @Html.ActionLink("Back to List", "Index")
</p>

