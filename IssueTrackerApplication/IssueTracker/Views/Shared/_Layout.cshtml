<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta name="description" content="" />
    <meta name="author" content="Riley W" />

    <title>@ViewBag.Title - Issue Tracker</title>

    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link rel='icon' href='~/Content/Images/WIT_favicon.ico' type='image/x-icon' sizes="64x64" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="page-top">
    <nav class="navbar navbar-expand navbar-light bg-white topnav mb-3 static-top shadow">
        <ul class="nav">
            <li class="mx-1">@Html.ActionLink("Wium Issue Tracker", "Index", "Home", new { }, new { @class = "btn btn-primary" })</li>
            <li class="mx-1">@Html.ActionLink("Projects", "Index", "ProjectModel", new { }, new { @class = "btn btn-primary" })</li>
            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
            {
                <li class="mx-1">@Html.ActionLink("Admin", "Index", "Admin", new { }, new { @class = "btn btn-primary" })</li>
            }
        </ul>
        <ul class="navbar-nav ml-auto">
            @Html.Partial("_LoginPartial")
        </ul>

    </nav>
    <div class="container-fluid">
        @RenderBody()
        <hr />
    </div>

    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright &copy; Wium Issue Tracker 2020</span>
                <a href="mailto:RWDeveloperContact@gmail.com?subject=WIT_Feedback_Report" target="_top">Send Feedback Report</a>
            </div>
        </div>
    </footer>
    <!-- End of Footer -->

    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Select "Log off" below if you are ready to end your current session.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-primary">Log off</a>
                    </div>
                </div>
            </div>
        </div>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/vendor/jquery-easing/jquery.easing.min.js")
    @Scripts.Render("~/Scripts/js/sb-admin-2.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>