@model IssueTracker.Models.ProjectModel

@{
    ViewBag.Title = "Leave this Project";
}

<h2>@ViewBag.Title</h2>

<h5>Are you sure you want to leave this project?</h5>
<div class="col-md-10">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProjName):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProjName)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Leave Project" class="btn btn-primary" />
            @Html.ActionLink("Back to Project", "Index", new { }, new { @class = "btn btn-secondary mx-1" })
        </div>
    }
</div>
